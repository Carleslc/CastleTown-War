package domain;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Game {

	/**
	 * @param args
	 */
	static BufferedReader br;
	
	static int askForInt(String message){
		boolean success;
		while()
		try {
			Integer.parseInt(br.readLine());
		} catch (NumberFormatException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public static void main(String[] args) {
		br = new BufferedReader(new InputStreamReader(System.in));
		
		System.out.println("Welcome to CastleTown War!");
		System.out.println("How many players will this game " +
				"have?");
		try {
			int nOfPlayers = Integer.parseInt(br.readLine());
			
		} catch (Exception e) {
			System.out.println("Fallo al leer del buffer reader");
			System.exit(0);
		}
		
	}

}
