package domain;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Game {

	/**
	 * @param args
	 */
	static BufferedReader br;
	
	static int askForInt(String message){
		boolean success = false;
		while(!success){
			try {
				int ret = Integer.parseInt(br.readLine());
				success = true;
				return ret;
			} catch (NumberFormatException e) {
				System.out.println("Introduce a valid integer");
				e.printStackTrace();
			} catch (IOException e) {
				System.out.println("IO Exception while reading integer");
				e.printStackTrace();
			}
		}
	}

	public static void main(String[] args) {
		br = new BufferedReader(new InputStreamReader(System.in));
		
		System.out.println("Welcome to CastleTown War!");
		System.out.println("How many players will this game " +
				"have?");
		try {
			int nOfPlayers = Integer.parseInt(br.readLine());
			
		} catch (Exception e) {
			System.out.println("Fallo al leer del buffer reader");
			System.exit(0);
		}
		
	}

}
